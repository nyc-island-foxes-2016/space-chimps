<h2>Add Questions to "<%= @survey.name %>"</h2>

<ul>
<% @survey.questions.each do |question| %>
  <li>
    <p><%= question.content %></p>
    <% question.options.each do |option| %>
      <p><%= option.content %></p>
    <% end %>
  </li>
<% end %>


<h4>Next Question</h4>
<form method="Post" action="/questions" >
  <label for="question[content]" >Question:</label>
  <textarea id="question-content" name="question[content]" placeholder="Enter question text" required></textarea>

  <label for="option[content_string]">Options:</label>
  <input type="text" name="option[content_string]" placeholder="Enter options separated by commas" required>
<input type="submit" value="Save Question" >

