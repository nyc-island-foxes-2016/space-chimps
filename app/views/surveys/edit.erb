<h2>Edit Survey</h2>

<a href="/surveys/<%= @survey.id %>">Back to Survey View</a>

<h3>Survey Heading</h3>

<form method="POST" action="/surveys/<%= @survey.id %>" >
  <input type="hidden" name="_method" value="PUT"/>

  <label for="survey-name">Name:</label>
  <input id="survey-name" type="text" name="survey[name]" value="<%= @survey.name %>" required />

  <label for="survey-description">Description:</label>
  <textarea id="survey-description" name="survey[description]" required><%= @survey.description %></textarea>

  <input type="submit" value="Save Survey" />
</form>

<h3>Questions</h3>

<ol>
  <% @survey.questions.each do |question| %>
    <li>
      <p><%= question.content %></p>

      <ul>
        <% question.options.each do |option| %>
          <li><%= option.content %></li>
        <% end %>
      </ul>

      <!-- <form method="POST" action="/questions/<%= question.id %>">
        <input type=hidden name="_method" value="DELETE">
        <input type="submit" value="Delete Question">
      </form> -->

    </li>
  <% end %>
</ol>

<form method="GET" action="/questions/new">
  <input type="hidden" name="survey_id" value="<%= @survey.id %>">
  <input type="submit" value="Add or Delete Questions">
</form>
